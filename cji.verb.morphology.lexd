<nh3.sg>:йа[a-pref]
<nh.pl>:йа[a-pref]
<m.sg>:ве[e-pref]  # Bokarev's 2nd group
<f.sg>:йе[e-pref]
<h.pl>:бе[e-pref]
<nh1.sg>:бе[e-pref]
<nh2.sg>:йе[e-pref]
<nh3.sg>:йе[e-pref]
<nh.pl>:йе[e-pref]
